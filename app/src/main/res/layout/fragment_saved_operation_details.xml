<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/container_receiver"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_squircle_white"
            android:elevation="@dimen/elevation_6dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_balance_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:hint="@integer/zero"
                android:inputType="numberDecimal"
                android:maxLength="15"
                android:minWidth="@dimen/dimen_20dp"
                android:textAlignment="textEnd"
                android:textColor="@color/text_main"
                android:textColorHint="@color/text_grey"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2"
                tools:text="234235 asdf asdf " />
            <TextView
                android:id="@+id/text_currency_code_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:text="@string/btc"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textColor="@color/text_grey"
                app:layout_constraintBaseline_toBaselineOf="@+id/input_balance_original"
                app:layout_constraintLeft_toRightOf="@+id/input_balance_original" />

            <EditText
                android:id="@+id/input_balance_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@integer/zero"
                android:inputType="numberDecimal"
                android:maxLength="13"
                android:minWidth="@dimen/dimen_20dp"
                android:paddingBottom="@dimen/margin_2dp"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/divider"
                app:layout_constraintStart_toStartOf="@+id/divider"
                app:layout_constraintTop_toBottomOf="@+id/input_balance_original"
                tools:text="234213" />
            <TextView
                android:id="@+id/text_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:background="@null"
                android:text="@string/usd"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textColor="@color/text_grey"
                app:layout_constraintBaseline_toBaselineOf="@+id/input_balance_currency"
                app:layout_constraintLeft_toRightOf="@+id/input_balance_currency" />


            <android.support.v7.widget.SwitchCompat
                android:id="@+id/pay_for_commission_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:checked="true"
                app:layout_constraintBottom_toBottomOf="@+id/text_fee"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/pay_for_commission"
                app:layout_constraintTop_toBottomOf="@+id/input_balance_currency" />

            <View
                android:id="@+id/divider"
                android:layout_width="@dimen/dp0"
                android:layout_height="@dimen/divider_height_medium"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/grey_light"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pay_for_commission_switch" />

            <EditText
                android:id="@+id/text_receiver_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/text_main"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                tools:text="To: v03049vn1034nv-1nnv'13v[134vv"
                android:background="@android:color/transparent"/>
        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:elevation="@dimen/elevation_6dp"
            app:layout_constraintBottom_toTopOf="@+id/container_receiver"
            app:layout_constraintLeft_toLeftOf="@+id/container_receiver"
            app:layout_constraintRight_toRightOf="@+id/container_receiver"
            app:layout_constraintTop_toTopOf="@+id/container_receiver"
            app:srcCompat="@drawable/ic_btc"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/input_note"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/shape_bottom_round_main"
            android:elevation="@dimen/elevation_4dp"
            android:gravity="center"
            android:hint="@string/hint_add_note"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="@integer/one"
            app:layout_constraintLeft_toLeftOf="@+id/container_receiver"
            app:layout_constraintRight_toRightOf="@+id/container_receiver"
            app:layout_constraintTop_toBottomOf="@+id/container_receiver" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/container_from"
            android:layout_width="@dimen/dp0"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/shape_squircle_white"
            android:elevation="@dimen/elevation_4dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/margin_8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_note">

            <TextView
                android:id="@+id/text_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sending_from"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textColor="@color/text_main"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_choose_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_from"
                android:popupBackground="@color/white"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"/>

            <!--<TextView-->
                <!--android:id="@+id/text_sender_balance_original"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textAppearance="@style/TextAppearance.AppCompat.Body1"-->
                <!--android:textColor="@color/text_grey"-->
                <!--app:layout_constraintLeft_toLeftOf="parent"-->
                <!--app:layout_constraintRight_toRightOf="parent"-->
                <!--app:layout_constraintTop_toBottomOf="@+id/spinner_choose_wallet"-->
                <!--tools:text="B 23" />-->

            <!--<TextView-->
                <!--android:id="@+id/text_sender_balance_currency"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textAppearance="@style/TextAppearance.AppCompat.Body1"-->
                <!--android:textColor="@color/text_grey"-->
                <!--app:layout_constraintLeft_toLeftOf="parent"-->
                <!--app:layout_constraintRight_toRightOf="parent"-->
                <!--app:layout_constraintTop_toBottomOf="@+id/text_sender_balance_original"-->
                <!--tools:text="$ 583980" />-->

            <View
                android:layout_width="@dimen/dp0"
                android:layout_height="@dimen/divider_height_medium"
                android:layout_marginTop="@dimen/margin_8dp"
                android:background="@color/grey_light"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner_choose_wallet" />

            <TextView
                android:id="@+id/text_transaction_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/fee_rate"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/text_main"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner_choose_wallet" />


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_choose_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_transaction_fee"
                android:popupBackground="@color/white"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"/>

        </android.support.constraint.ConstraintLayout>
        <TextView
            android:id="@+id/text_donation_allow"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/donation_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/shape_top_round_white"
            android:elevation="@dimen/elevation_3dp"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:text="@string/allow_donation_for_multy"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@color/text_main_dark"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_from" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:checked="true"
            android:elevation="@dimen/elevation_3dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_donation_allow"
            app:layout_constraintRight_toRightOf="@+id/text_donation_allow"
            app:layout_constraintTop_toTopOf="@+id/text_donation_allow" />

        <TextView
            android:id="@+id/text_donation_summ"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/donation_summ_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/shape_bottom_round_white"
            android:elevation="@dimen/elevation_3dp"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:text="@string/donation_summ"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@color/text_main_dark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_donation_allow" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_donation"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40dp"
            android:elevation="@dimen/elevation_3dp"
            android:hint="@string/donation_default"
            android:inputType="numberDecimal"
            android:maxLength="@integer/ten"
            android:maxWidth="@dimen/dimen_150dp"
            android:text="@string/donation_default"
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@color/text_main"
            app:layout_constraintBottom_toTopOf="@+id/text_fee_currency"
            app:layout_constraintRight_toLeftOf="@+id/text_fee_original"
            app:layout_constraintTop_toTopOf="@+id/text_donation_summ"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignoreContentDescription="true" />

        <TextView
            android:id="@+id/text_fee_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_18dp"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:elevation="@dimen/elevation_4dp"
            android:text="@string/btc"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@color/text_main"
            app:layout_constraintBottom_toBottomOf="@+id/input_donation"
            app:layout_constraintRight_toRightOf="@+id/text_donation_summ"
            app:layout_constraintTop_toTopOf="@+id/input_donation" />

        <TextView
            android:id="@+id/text_fee_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_18dp"
            android:elevation="@dimen/elevation_4dp"
            android:text="@string/usd"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/text_grey"
            app:layout_constraintBottom_toBottomOf="@+id/text_donation_summ"
            app:layout_constraintRight_toRightOf="@+id/text_donation_summ"
            app:layout_constraintTop_toBottomOf="@+id/input_donation" />

        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            app:layout_constraintBottom_toTopOf="@id/button_next"
            app:layout_constraintTop_toBottomOf="@id/text_donation_summ" />

        <TextView
            android:id="@+id/button_next"
            style="@style/ButtonNext"
            android:text="@string/slide_to_send"
            android:textColor="@color/white_transparent"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/space" />

        <ImageView
            android:id="@+id/image_slider"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:foreground="@drawable/selectable_item_background"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_next"
            app:layout_constraintStart_toStartOf="@+id/button_next"
            app:layout_constraintTop_toTopOf="@+id/button_next"
            app:srcCompat="@drawable/ic_slide_to_send" />

        <ImageView
            android:id="@+id/image_slider_finish"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_next"
            app:layout_constraintEnd_toEndOf="@+id/button_next"
            app:layout_constraintTop_toTopOf="@+id/button_next"
            app:srcCompat="@drawable/ic_slide_to_send_finish" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>