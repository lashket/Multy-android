<android.support.constraint.ConstraintLayout android:id="@+id/constraint_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="@dimen/margin_8dp"
    android:paddingBottom="@dimen/margin_8dp">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat"
            android:text="BTC âˆ™ Personal"
            android:textColor="#FFFF9500"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/image_chevron"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/image_chain"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_chain"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="7dp"
            android:src="@drawable/ic_btc_huge"
            app:layout_constraintBottom_toBottomOf="@+id/text_amount_fiat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_name" />

        <TextView
            android:id="@+id/text_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/montserrat"
            android:text="0.1234"
            android:textColor="#FF363636"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/text_currency"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/image_chain"
            app:layout_constraintTop_toBottomOf="@+id/text_name" />

        <TextView
            android:id="@+id/text_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/btc"
            android:textColor="#87a1c5"
            android:textSize="18sp"
            android:visibility="gone"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/text_amount"
            app:layout_constraintLeft_toRightOf="@id/text_amount" />

        <TextView
            android:id="@+id/text_amount_fiat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat"
            android:textColor="#87a1c5"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/text_amount"
            app:layout_constraintTop_toBottomOf="@id/text_amount"
            tools:text="1 233 $" />

        <ImageView
            android:id="@+id/image_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_history_pending"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/image_chevron"
            app:layout_constraintRight_toLeftOf="@id/image_chevron"
            app:layout_constraintTop_toTopOf="@id/image_chevron" />


    </android.support.constraint.ConstraintLayout>
